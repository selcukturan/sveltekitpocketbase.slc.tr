{
	"name": "sveltekitpocketbase.slc.tr",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"slc:dev:push": "git add . && git commit -m \"SLC CLI Auto Push\" && git push origin main",
		"pb": "docker compose --file ./.slc-development/pocketbase/docker-compose.yml --env-file ./.env.development up -d --build",
		"pb:typegen": "pocketbase-typegen --db ./.slc-production/pocketbase/pb_data/data.db --out ./src/lib/types/pocketbase-types.ts",
		"slc:production:docker": "docker-compose -f docker-compose-local.yml --env-file ./.env.local up --build -d"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.5.1",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.9",
		"@types/tabulator-tables": "^6.3.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-neverthrow": "^1.1.4",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"pocketbase-typegen": "^1.3.3",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.4",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"dotenv-expand": "^12.0.3",
		"neverthrow": "^8.2.0",
		"pocketbase": "^0.26.6",
		"runed": "^0.37.1",
		"tabulator-tables": "^6.3.1",
		"valibot": "^1.2.0"
	}
}
